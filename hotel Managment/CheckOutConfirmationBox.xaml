<Window x:Class="hotel_Managment.CheckOutConfirmationBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hotel_Managment"
        mc:Ignorable="d"
        Title="CheckOutConfirmationBox" Height="170" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None" ShowInTaskbar="False">
    <Grid Background="#2B2D41">
        <StackPanel Orientation="Horizontal">
            <Image Margin="10 0 0 0" Source="./resources/question.png" Height="70" Width="70"></Image>
            <StackPanel Orientation="Vertical">
                <TextBlock xml:space="preserve" Foreground="White" FontSize="18"> 
 Are you sure you want 
 to check-out this guest !?
                </TextBlock>
                <StackPanel Orientation="Horizontal">
                    <Button Name="btnYesGuestCheckOut" Click="btnYesGuestCheckOut_Click" Content="Yes" Margin="20 10 0 0"></Button>
                    <Button Name="btnNoGuestCheckOut" Click="btnNoGuestCheckOut_Click" Content="No" Margin="20 10 0 0"></Button>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
