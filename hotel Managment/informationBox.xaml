<Window x:Class="hotel_Managment.informationBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hotel_Managment"
        mc:Ignorable="d"
        Title="informationBox" Height="140" Width="500" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None" ShowInTaskbar="False">
    <Grid Background="#2B2D41">
        <StackPanel Orientation="Horizontal">
            <Image Margin="10 0 0 0" Source="./resources/info.png" Height="70" Width="70"></Image>
            <StackPanel Orientation="Vertical" Width="420">
                <TextBlock  Name="information" Foreground="White" FontSize="18" Margin="20 20 20 20" Width="390">
                </TextBlock>
                <StackPanel Orientation="Horizontal">
                    <Button Name="btnOKInformationBox" Click="btnOKInformationBox_Click" FontSize="20" Content="OK" Height="40" Width="100" Margin="150 10 0 0"></Button>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
